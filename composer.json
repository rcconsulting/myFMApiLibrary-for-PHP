{
    "name": "rcconsulting/myfmapilibrary-for-php",
    "type": "library",
    "description": "FileMaker 17/18/19 Data API PHP wrapper",
    "Keywords": ["Claris", "FileMaker", "Data API", "API", "REST", "Database", "Wrapper"],
    "license": "BSD-3-Clause",
    "version": "2.1.0",
    "minimum-stability": "stable",
    "authors": [
      {
        "name": "Lesterius",
        "email": "infoFR@lesterius.com",
        "homepage": "https://www.lesterius.com"
      },
       {
           "name": "Jacob Taylor",
           "email": "jacob.taylor@rcconsulting.com",
           "homepage": "https://rcconsulting.com"
       },
      {
        "name": "Jon Eisen",
        "email": "jon.eisen@rcconsulting.com",
        "homepage": "https://rcconsulting.com"
      },
       {
           "name": "Steve Allen",
           "email": "steve.allen@rcconsulting.com",            
           "homepage": "https://rcconsulting.com"
        }
    ],
    "autoload": {
        "psr-4": {
          "RCConsulting\\FileMakerApi\\": "src",
          "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.3.0",
        "ext-curl": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.9",
      "ext-fileinfo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3",
        "vlucas/phpdotenv": "^5.6"
    },
    "config": {
      "sort-packages": true,
      "optimize-autoloader": true
    }
}
